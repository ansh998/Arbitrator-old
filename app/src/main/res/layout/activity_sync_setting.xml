<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Sync  "
            android:textColor="@color/white"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="20dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"></View>

    <RelativeLayout
        android:id="@+id/y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="13dp"
            android:paddingLeft="20dp"
            android:text="Device:"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/d"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/c"
            android:background="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>

    <View
        android:id="@+id/z"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/c"
        android:layout_marginTop="13dp"
        android:background="#cccccc"
        android:paddingBottom="16dp"></View>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Name -->
        <TableRow>

            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_below="@+id/z"
                android:layout_marginTop="13dp"
                android:paddingLeft="20dp"
                android:text="Device Name :"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/f"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="2"
                android:layout_below="@id/z"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/e"
                android:text="test"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </TableRow>

        <!-- type -->
        <TableRow>

            <TextView
                android:id="@+id/g"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_below="@+id/e"
                android:layout_marginTop="13dp"
                android:paddingLeft="20dp"
                android:text="Device Type :"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/h"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="2"
                android:layout_below="@id/f"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/g"
                android:text="test"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </TableRow>

        <!-- id -->
        <TableRow>

            <TextView
                android:id="@+id/i"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_below="@+id/g"
                android:layout_marginTop="13dp"
                android:paddingLeft="20dp"
                android:text="Device ID :"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/j"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="2"
                android:layout_below="@id/h"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/i"
                android:text="test"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </TableRow>
        <!-- Status -->
        <TableRow>

            <TextView
                android:id="@+id/k"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_below="@+id/i"
                android:layout_marginTop="13dp"
                android:paddingLeft="20dp"
                android:text="Status :"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/l"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="2"
                android:layout_below="@id/j"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/k"
                android:text="test"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>